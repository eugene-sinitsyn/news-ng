{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./out-tsc/app",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    // "paths": {
    //   "@module-name": ["src/module-path"]
    // }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/environments",
    "src/test.ts",
    "src/**/*.spec.ts"
  ]
}
